<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:layout_width="match_parent"
        android:id="@+id/down_load_progressbar"
        android:progressBackgroundTint="@color/colorPrimaryDark"
        android:progress="0"
        android:max="100"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/down_load_progressbar"
        android:text="下载···"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:id="@+id/down_load_text"
        android:layout_height="wrap_content" />
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/down_load_text"
        android:orientation="horizontal"
       android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:elevation="10dp"
            android:background="@drawable/btn_corner"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:id="@+id/down_cancel"
            android:text="取消"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
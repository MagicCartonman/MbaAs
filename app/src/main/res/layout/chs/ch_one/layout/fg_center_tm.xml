<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="20dp"
                    android:text="题目"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tm_content"/>
        </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
          android:layout_margin="10dp"
          android:elevation="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
              <RadioGroup
                  android:id="@+id/tm_select_group"
                  android:layout_margin="20dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                      <RadioButton
                          android:id="@+id/tm_a"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20dp"
                          android:text="选项A：" />
                      <RadioButton
                          android:layout_marginTop="20dp"
                          android:text="选项B："
                          android:id="@+id/tm_b"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" />
                      <RadioButton
                          android:layout_marginTop="20dp"
                          android:text="选项C："
                          android:id="@+id/tm_c"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" />
                      <RadioButton
                          android:layout_marginTop="20dp"
                          android:text="选项D："
                          android:id="@+id/tm_d"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" />
              </RadioGroup>
      </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:padding="10dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Switch
                    android:switchPadding="5dp"
                    android:layout_margin="10dp"
                    android:text="解析"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tm_answer_btn"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/tm_answer_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <TextView

                            android:padding="10dp"
                            android:text="正确答案"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tm_answer_right"/>
                        <TextView
                            android:text="解析"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tm_answer_desc"/>

                </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:background="#fff"
            android:backgroundTint="#fff"
            app:elevation="10dp"
            android:layout_margin="10dp"
            android:id="@+id/my_like"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:src="@drawable/my_like"/>





</LinearLayout>